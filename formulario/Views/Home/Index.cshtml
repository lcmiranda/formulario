                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Dia da Semana</th>
                            <th scope="col">Hora Início</th>
                            <th scope="col">Hora Fim</th>
                            <th scope="col">Tempo Descanso (h)</th>
